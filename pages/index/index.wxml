<!--index.wxml-->
<view class='index'>
  <view class='selectWrapper'>
    <picker-view class="select" indicator-style="height: 35px;" value="{{originLangIndex}}" bindchange="onOrignLangChnage">
      <picker-view-column>
        <view wx:for="{{langList}}" wx:key="{{index}}">{{item.name}}</view>
      </picker-view-column>
    </picker-view>
    <text class='iconfont icon-zhuanhuan'></text>
    <picker-view class="select" indicator-style="height: 35px;" value="{{targetLangIndex}}" bindchange="onTargetLangChnage">
      <picker-view-column>
        <view wx:for="{{langList}}" wx:key="{{index}}">{{item.name}}</view>
      </picker-view-column>
    </picker-view>
  </view>
  <view class='inputWrapper'>
    <textarea placeholder="请输入你要翻译的内容(200字内)" class="input" maxlength='200' placeholder-class="inputHolder" value="{{query}}" bindinput='onInput' bindblur='onConfirm'></textarea>
    <text class='iconfont icon-clear' bindtap="clear" hidden="{{hideClearIcon}}"></text>
  </view>
  <view class='targetWrapper'>
    <textarea class='target' selectable='true' value='{{result}}' bindtap='copy' data-text='{{result}}'></textarea>
  </view>
</view>