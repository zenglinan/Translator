.outerWrapper {
    display: flex;
    display: inline-flex;
    align-items: center;
}

.outerWrapper .translate {
    display: flex;
    align-items: center;
    border-radius: 20rpx;
    border: 1px solid rgb(242, 242, 242);
}

.outerWrapper .translate {
    padding: 2rpx 16rpx;
}

.outerWrapper i {
    font-size: 30rpx;
    font-weight: bold;
    color: rgb(181,181,181);
}

.langWrapper {
    display: flex;
    align-items: center;
}
.langWrapper:first-child{
    margin-right: 30rpx;
}
.langWrapper:last-child{
    margin-left: 30rpx;
}
.langWrapper .lang {
    font-size: 32rpx;
    color: rgb(69, 69, 69);
    padding-right: 10rpx;
    font-family: sans-serif;
}
.langWrapper i {
    font-size: 20rpx;
    color: rgb(51, 51, 51);
}
